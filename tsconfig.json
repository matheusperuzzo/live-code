{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "es2021",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@presentation/*": ["./src/presentation/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}